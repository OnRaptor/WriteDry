<ui:ContentDialog x:Class="WriteDry.Dialogs.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteDry.Dialogs"
        mc:Ignorable="d"
        Title="Message Title" Height="450" Width="400">
    <Grid>
        <ui:SimpleStackPanel Spacing="20" Orientation="Vertical">
            <Line X1="0" X2="100" Stretch="Fill" StrokeThickness="2" Stroke="Gray" Y1="0" Y2="0"/>
            <TextBlock Text="Message Text" FontSize="26"/>
            <Button Content="Ok" Style="{StaticResource AccentButtonStyle}" />
        </ui:SimpleStackPanel>
    </Grid>
</ui:ContentDialog>
